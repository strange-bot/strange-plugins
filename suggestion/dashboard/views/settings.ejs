<section class="rounded-lg border border-gray-200 bg-white p-4 shadow-sm dark:border-gray-700 dark:bg-gray-800">
  <form x-data="{
    formData: {
      upvote_emoji: '<%= settings.upvote_emoji %>',
      downvote_emoji: '<%= settings.downvote_emoji %>',
      default_ch: '<%= settings.channel_id %>',
      default_embed: '<%= settings.default_embed %>',
      approved_ch: '<%= settings.approved_channel %>',
      approved_embed: '<%= settings.approved_embed %>',
      rejected_ch: '<%= settings.rejected_channel %>',
      rejected_embed: '<%= settings.rejected_embed %>',
      staff_roles: <%= JSON.stringify(settings.staff_roles) %>
    },
    saving: false,
    async submitForm() {
      this.saving = true;
      try {
        const response = await fetch(window.location.href, {
          method: 'PUT',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(this.formData)
        });
        
        if (!response.ok) throw new Error('Failed to update settings');
        Alpine.store('toast').show('<%=tr(`SETTINGS_SAVE`)%>', 'success');
      } catch (error) {
        Alpine.store('toast').show('<%=tr(`SETTINGS_SAVE_ERROR`)%>', 'error');
      } finally {
        this.saving = false;
      }
    }
  }" @submit.prevent="submitForm">
    <!-- START: Card Body -->

    <!-- START: ROW 1 -->
    <div class="mb-3">
      <div class="grid gap-4 md:grid-cols-2 xl:grid-cols-2">
        <!-- START: Column 1 (Upvote Emoji) -->
        <div>
          <div class="mb-2">
            <label for="upvote_emoji" class="text-sm font-semibold text-gray-900 dark:text-white"
              ><%= tr("suggestion:UPVOTE_TITLE") %></label
            >
            <div class="text-sm font-normal text-gray-500 dark:text-gray-400"><%= tr("suggestion:UPVOTE_DESC") %></div>
          </div>
          <input
            type="text"
            x-model="formData.upvote_emoji"
            name="upvote_emoji"
            maxlength="2"
            id="upvote_emoji"
            class="block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-gray-900 shadow-sm focus:border-primary-500 focus:ring-primary-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 dark:focus:border-primary-500 dark:focus:ring-primary-500 sm:text-sm"
            required />
        </div>
        <!-- END: Column 1 -->

        <!-- START: Column 2 (Downvote Emoji) -->
        <div>
          <div class="mb-2">
            <label for="downvote_emoji" class="text-sm font-semibold text-gray-900 dark:text-white"
              ><%= tr("suggestion:DOWNVOTE_TITLE") %></label
            >
            <div class="text-sm font-normal text-gray-500 dark:text-gray-400">
              <%= tr("suggestion:DOWNVOTE_DESC") %>
            </div>
          </div>
          <input
            type="text"
            x-model="formData.downvote_emoji"
            name="downvote_emoji"
            maxlength="2"
            id="downvote_emoji"
            class="block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-gray-900 shadow-sm focus:border-primary-500 focus:ring-primary-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 dark:focus:border-primary-500 dark:focus:ring-primary-500 sm:text-sm"
            required />
        </div>
        <!-- END: Column 2 -->
      </div>
    </div>
    <!-- END: ROW 1 -->

    <!-- START: ROW 2 -->
    <div class="mb-3">
      <div class="grid gap-4 md:grid-cols-2 xl:grid-cols-2">
        <!-- START: Column 1 (Default Channel) -->
        <div>
          <div class="mb-2">
            <label for="default_ch" class="text-sm font-semibold text-gray-900 dark:text-white"
              ><%= tr("suggestion:DEFAULT_CH_TITLE") %></label
            >
            <div class="text-sm font-normal text-gray-500 dark:text-gray-400">
              <%= tr("suggestion:DEFAULT_CH_DESC") %>
            </div>
          </div>
          <select 
            x-model="formData.default_ch"
            name="default_ch" 
            id="default_ch" 
            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500">
            <option selected disabled><%= tr("CHANNEL_SELECT") %></option>
            <% channels.map((ch) => { %>
              <option value="<%= ch.id %>" <%= settings.channel_id === ch.id ? 'selected' : '' %>><%= ch.name %></option>
            <% }) %>
          </select>
        </div>

        <!-- START: Column 2 (Default Embed) -->
        <div>
          <div class="mb-2">
            <label for="default_embed" class="text-sm font-semibold text-gray-900 dark:text-white"
              ><%= tr("suggestion:DEFAULT_EMBED_TITLE") %></label
            >
            <div class="text-sm font-normal text-gray-500 dark:text-gray-400">
              <%= tr("suggestion:DEFAULT_EMBED_DESC") %>
            </div>
          </div>
          <input
            type="color"
            x-model="formData.default_embed"
            name="default_embed"
            id="default_embed"
            class="block h-10 w-full rounded-lg border border-gray-300 p-0.5 text-gray-900 shadow-sm focus:border-primary-500 focus:ring-primary-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 dark:focus:border-primary-500 dark:focus:ring-primary-500 sm:text-sm"
            required />
        </div>
      </div>
    </div>
    <!-- END: ROW 2 -->

    <!-- START: ROW 3 -->
    <div class="mb-3">
      <div class="grid gap-4 md:grid-cols-2 xl:grid-cols-2">
        <!-- START: Column 1 (Approved Channel) -->
        <div>
          <div class="mb-2">
            <label for="approved_ch" class="text-sm font-semibold text-gray-900 dark:text-white"
              ><%= tr("suggestion:APPROVED_CH_TITLE") %></label
            >
            <div class="text-sm font-normal text-gray-500 dark:text-gray-400">
              <%= tr("suggestion:APPROVED_CH_DESC") %>
            </div>
          </div>
          <select 
            x-model="formData.approved_ch"
            name="approved_ch" 
            id="approved_ch" 
            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500">
            <option selected disabled><%= tr("CHANNEL_SELECT") %></option>
            <% channels.map((ch) => { %>
              <option value="<%= ch.id %>" <%= settings.approved_channel === ch.id ? 'selected' : '' %>><%= ch.name %></option>
            <% }) %>
          </select>
        </div>

        <!-- START: Column 2 (Approved Embed) -->
        <div>
          <div class="mb-2">
            <label for="approved_embed" class="text-sm font-semibold text-gray-900 dark:text-white"
              ><%= tr("suggestion:APPROVED_EMBED_TITLE") %></label
            >
            <div class="text-sm font-normal text-gray-500 dark:text-gray-400">
              <%= tr("suggestion:APPROVED_EMBED_DESC") %>
            </div>
          </div>
          <input
            type="color"
            x-model="formData.approved_embed"
            name="approved_embed"
            id="approved_embed"
            class="block h-10 w-full rounded-lg border border-gray-300 p-0.5 text-gray-900 shadow-sm focus:border-primary-500 focus:ring-primary-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 dark:focus:border-primary-500 dark:focus:ring-primary-500 sm:text-sm"
            required />
        </div>
      </div>
    </div>
    <!-- END: ROW 3 -->

    <!-- START: ROW 4 -->
    <div class="mb-3">
      <div class="grid gap-4 md:grid-cols-2 xl:grid-cols-2">
        <!-- START: Column 1 (Rejected Channel) -->
        <div>
          <div class="mb-2">
            <label for="rejected_ch" class="text-sm font-semibold text-gray-900 dark:text-white"
              ><%= tr("suggestion:REJECTED_CH_TITLE") %></label
            >
            <div class="text-sm font-normal text-gray-500 dark:text-gray-400">
              <%= tr("suggestion:REJECTED_CH_DESC") %>
            </div>
          </div>
          <select 
            x-model="formData.rejected_ch"
            name="rejected_ch" 
            id="rejected_ch" 
            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500">
            <option selected disabled><%= tr("CHANNEL_SELECT") %></option>
            <% channels.map((ch) => { %>
              <option value="<%= ch.id %>" <%= settings.rejected_channel === ch.id ? 'selected' : '' %>><%= ch.name %></option>
            <% }) %>
          </select>
        </div>

        <!-- START: Column 2 (Rejected Embed) -->
        <div>
          <div class="mb-2">
            <label for="rejected_embed" class="text-sm font-semibold text-gray-900 dark:text-white"
              ><%= tr("suggestion:REJECTED_EMBED_TITLE") %></label
            >
            <div class="text-sm font-normal text-gray-500 dark:text-gray-400">
              <%= tr("suggestion:REJECTED_EMBED_DESC") %>
            </div>
          </div>
          <input
            type="color"
            x-model="formData.rejected_embed"
            name="rejected_embed"
            id="rejected_embed"
            class="block h-10 w-full rounded-lg border border-gray-300 p-0.5 text-gray-900 shadow-sm focus:border-primary-500 focus:ring-primary-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 dark:focus:border-primary-500 dark:focus:ring-primary-500 sm:text-sm"
            required />
        </div>
      </div>
    </div>
    <!-- END: ROW 4 -->

    <!-- START: ROW 5 -->
    <div class="mb-3">
      <div class="mb-2">
        <label for="staff_roles" class="text-sm font-semibold text-gray-900 dark:text-white"><%= tr("suggestion:STAFF_TITLE") %></label>
        <div class="text-sm font-normal text-gray-500 dark:text-gray-400">
          <%= tr("suggestion:STAFF_DESC") %>
        </div>
      </div>
      <select 
        x-model="formData.staff_roles" 
        multiple 
        name="staff_roles" 
        id="staff_roles" 
        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500">
        <% roles.map((r) => { %>
          <option value="<%= r.id %>" <%= settings.staff_roles.includes(r.id) ? 'selected' : '' %>><%= r.name %></option>
        <% }) %>
      </select>
    </div>
    <!-- END: ROW 5 -->

    <!-- END: Card Body -->

    <!-- START: Card Footer -->
    <div class="mt-4 flex items-center justify-between border-t border-gray-200 pt-3 dark:border-gray-700 sm:pt-6">
      <div></div>
      <div class="flex-shrink-0">
        <button
          type="submit"
          :disabled="saving"
          :class="{'opacity-50': saving}"
          class="inline-flex items-center rounded-lg bg-primary-700 px-3 py-2 text-center text-sm font-medium text-white hover:bg-primary-800 focus:outline-none focus:ring-4 focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800"
        >
          <span x-show="!saving"><%= tr('BTN_SAVE') %></span>
          <span x-show="saving"><%= tr('BTN_SAVING') %></span>
        </button>
      </div>
    </div>
  </form>
</section>