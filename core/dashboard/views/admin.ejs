<section class="mb-6 px-4">
  <div
    class="rounded-lg border border-gray-200 bg-white p-4 shadow-sm dark:border-gray-700 dark:bg-gray-800 sm:p-6 2xl:col-span-2"
    x-data="{
      saving: false,
      formData: {
        prefix: '<%= config.PREFIX_COMMANDS.DEFAULT_PREFIX %>',
        locale: '<%= settings.locale %>',
        support_server: '<%= config.SUPPORT_SERVER %>',
        slash_commands: '<%= config.INTERACTIONS.SLASH ? `on` : `off` %>',
        context_menus: '<%= config.INTERACTIONS.CONTEXT ? `on` : `off` %>'
      },
      async submitServerConfig() {
        if (this.saving) return;
        this.saving = true;
        try {
          const response = await fetch(window.location.href, {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              ...this.formData,
              server_config: true
            })
          });
          
          if (response.ok) {
            Alpine.store('toast').show('<%=tr(`CONFIG_SAVE`)%>', 'success');
          } else {
            throw new Error('Failed to save changes');
          }
        } catch (error) {
          Alpine.store('toast').show('<%=tr(`CONFIG_SAVE_ERROR`)%>', 'error');
        } finally {
          this.saving = false;
        }
      }
    }">
    <!-- START: Card Header -->
    <div class="mb-4 flex items-center justify-between border-b border-gray-200 pb-4 dark:border-gray-700">
      <h3 class="text-lg font-semibold text-gray-800 dark:text-white"><%= tr("core:SERVER_DEFAULTS") %></h3>
    </div>
    <!-- END: Card Header -->

    <form @submit.prevent="submitServerConfig">

      <!-- START: Card Body -->
      <div class="mb-3">
        <div class="grid gap-4 md:grid-cols-3 xl:grid-cols-3">

          <!-- START: Column 1 -->
          <div>
            <div class="mb-2">
              <label for="prefix" class="text-sm font-semibold text-gray-900 dark:text-white"><%= tr("core:PREFIX_TITLE") %></label>
              <div class="text-sm font-normal text-gray-500 dark:text-gray-400">
                <%= tr("core:PREFIX_DESC") %>
              </div>
            </div>
            <input
              type="text"
              x-model="formData.prefix"
              minlength="1"
              maxlength="2"
              id="prefix"
              class="block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-gray-900 shadow-sm focus:border-primary-500 focus:ring-primary-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 dark:focus:border-primary-500 dark:focus:ring-primary-500 sm:text-sm"
              required
            />
          </div>
          <!-- END: Column 1 -->

          <!-- START: Column 2 -->
          <div>
            <div class="mb-2">
              <label for="locale" class="text-sm font-semibold text-gray-900 dark:text-white"><%= tr("core:LOCALE_TITLE") %></label>
              <div class="text-sm font-normal text-gray-500 dark:text-gray-400">
                <%= tr("core:LOCALE_DESC") %>
              </div>
            </div>
            <select
              x-model="formData.locale"
              id="locale"
              class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500">
              <% languages.forEach((lang) => { %>
                <option value="<%= lang %>"><%= lang %></option>
              <% }) %>
            </select>
          </div>
          <!-- END: Column 2 -->

          <!-- START: Column 3 -->
          <div>
            <div class="mb-2">
              <label for="support_server" class="text-sm font-semibold text-gray-900 dark:text-white"><%= tr("core:SUPPORT") %></label>
              <div class="text-sm font-normal text-gray-500 dark:text-gray-400">
                <%= tr("core:SUPPORT_DESC") %>
              </div>
            </div>
            <input
              type="url"
              x-model="formData.support_server"
              id="support_server"
              class="block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-gray-900 shadow-sm focus:border-primary-500 focus:ring-primary-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 dark:focus:border-primary-500 dark:focus:ring-primary-500 sm:text-sm"
              required
            />
          </div>

          <!-- START: Column 4 -->
          <div>
            <div class="mb-2">
              <label for="slash_commands" class="text-sm font-semibold text-gray-900 dark:text-white"><%= tr("core:SLASH") %></label>
              <div class="text-sm font-normal text-gray-500 dark:text-gray-400">
                <%= tr("core:SLASH_DESC") %>
              </div>
            </div>
            <select
              x-model="formData.slash_commands"
              id="slash_commands"
              class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500">
                <option value="on"><%=tr("ENABLED") %></option>
                <option value="off"><%=tr("DISABLED") %></option>
            </select>
          </div>
          <!-- END: Column 4 -->

          <!-- START: Column 5 -->
          <div>
            <div class="mb-2">
              <label for="context_menus" class="text-sm font-semibold text-gray-900 dark:text-white"><%= tr("core:CONTEXT") %></label>
              <div class="text-sm font-normal text-gray-500 dark:text-gray-400">
                <%= tr("core:CONTEXT_DESC") %>
              </div>
            </div>
            <select
              x-model="formData.context_menus"
              id="context_menus"
              class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500">
                <option value="on"><%=tr("ENABLED") %></option>
                <option value="off"><%=tr("DISABLED") %></option>
            </select>
          </div>
          <!-- END: Column 5 -->

        </div>
      </div>
      <!-- END: Card Body -->

      <!-- START: Card Footer -->
      <div class="mt-4 flex items-center justify-between border-t border-gray-200 pt-3 dark:border-gray-700 sm:pt-6">
        <div></div>
        <div class="flex-shrink-0">
          <button
            type="submit"
            :disabled="saving"
            class="inline-flex items-center rounded-lg bg-primary-700 px-3 py-2 text-center text-sm font-medium text-white hover:bg-primary-800 focus:outline-none focus:ring-4 focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800 disabled:opacity-50"
          >
            <span x-show="!saving"><%= tr('BTN_SAVE') %></span>
            <span x-show="saving"><%= tr('BTN_SAVING') %></span>
          </button>
        </div>
      </div>
      <!-- END: Card Footer -->
    </form>
  </div>
</section>

