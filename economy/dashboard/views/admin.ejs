<section class="mb-6 px-4">
  <div
    class="rounded-lg border border-gray-200 bg-white p-4 shadow-sm dark:border-gray-700 dark:bg-gray-800 sm:p-6 2xl:col-span-2">
    <!-- START: Card Header -->
    <div class="mb-4 flex items-center justify-between border-b border-gray-200 pb-4 dark:border-gray-700">
      <h3 class="text-lg font-semibold text-gray-800 dark:text-white"><%= tr("economy:DEFAULTS") %></h3>
    </div>
    <!-- END: Card Header -->

    <form x-data="{
        formData: {
          currency: '<%= config.CURRENCY %>',
          daily_coins: '<%= config.DAILY_COINS %>',
          min_beg_amount: '<%= config.MIN_BEG_AMOUNT %>',
          max_beg_amount: '<%= config.MAX_BEG_AMOUNT %>',
          beg_interval: '<%= config.BEG_INTERVAL %>'
        },
        saving: false,
        async submitForm() {
          this.saving = true;
          try {
            const response = await fetch('/api/economy/config', {
              method: 'PUT',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify(this.formData)
            });
            if (!response.ok) throw new Error('Failed to update');
            Alpine.store('toast').show('<%= tr("SAVED_SUCCESS") %>', 'success');
          } catch (error) {
            Alpine.store('toast').show(error.message, 'error');
          } finally {
            this.saving = false;
          }
        }
      }" @submit.prevent="submitForm">
      <!-- START: Card Body -->
      <div class="mb-3">
        <div class="grid gap-4 md:grid-cols-2 xl:grid-cols-2">
          <!-- START: Column 1 (Currency) -->
          <div>
            <div class="mb-2">
              <label for="currency" class="text-sm font-semibold text-gray-900 dark:text-white"
                ><%= tr("economy:CURRENCY_TITLE") %></label
              >
              <div class="text-sm font-normal text-gray-500 dark:text-gray-400">
                <%= tr("economy:CURRENCY_DESC") %>
              </div>
            </div>
            <input
              type="text"
              minlength="1"
              maxlength="2"
              name="currency"
              id="currency"
              class="block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-gray-900 shadow-sm focus:border-primary-500 focus:ring-primary-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 dark:focus:border-primary-500 dark:focus:ring-primary-500 sm:text-sm"
              x-model="formData.currency"
              required />
          </div>
          <!-- END: Column 1 -->

          <!-- START: Column 2 (Daily Coins) -->
          <div>
            <div class="mb-2">
              <label for="daily_coins" class="text-sm font-semibold text-gray-900 dark:text-white"
                ><%= tr("economy:DAILY_TITLE") %></label
              >
              <div class="text-sm font-normal text-gray-500 dark:text-gray-400">
                <%= tr("economy:DAILY_DESC") %>
              </div>
            </div>
            <input
              type="number"
              name="daily_coins"
              id="daily_coins"
              class="block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-gray-900 shadow-sm focus:border-primary-500 focus:ring-primary-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 dark:focus:border-primary-500 dark:focus:ring-primary-500 sm:text-sm"
              x-model="formData.daily_coins"
              required />
          </div>
          <!-- END: Column 2 -->

          <!-- START: Column 3 (Minimum Beg Amount) -->
          <div>
            <div class="mb-2">
              <label for="min_beg_amount" class="text-sm font-semibold text-gray-900 dark:text-white"
                ><%= tr("economy:MIN_BEG_TITLE") %></label
              >
              <div class="text-sm font-normal text-gray-500 dark:text-gray-400">
                <%= tr("economy:MIN_BEG_DESC") %>
              </div>
            </div>
            <input
              type="number"
              name="min_beg_amount"
              id="min_beg_amount"
              class="block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-gray-900 shadow-sm focus:border-primary-500 focus:ring-primary-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 dark:focus:border-primary-500 dark:focus:ring-primary-500 sm:text-sm"
              x-model="formData.min_beg_amount"
              required />
          </div>
          <!-- END: Column 3 -->

          <!-- START: Column 4 (Maximum Beg Amount) -->
          <div>
            <div class="mb-2">
              <label for="max_beg_amount" class="text-sm font-semibold text-gray-900 dark:text-white"
                ><%= tr("economy:MAX_BEG_TITLE") %></label
              >
              <div class="text-sm font-normal text-gray-500 dark:text-gray-400">
                <%= tr("economy:MAX_BEG_DESC") %>
              </div>
            </div>
            <input
              type="number"
              name="max_beg_amount"
              id="max_beg_amount"
              class="block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-gray-900 shadow-sm focus:border-primary-500 focus:ring-primary-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 dark:focus:border-primary-500 dark:focus:ring-primary-500 sm:text-sm"
              x-model="formData.max_beg_amount"
              required />
          </div>

          <div>
            <div class="mb-2">
              <label for="beg_interval" class="text-sm font-semibold text-gray-900 dark:text-white"
                ><%= tr("economy:BEG_INTERVAL") %></label
              >
              <div class="text-sm font-normal text-gray-500 dark:text-gray-400">
                <%= tr("economy:BEG_INTERVAL_DESC") %>
              </div>
            </div>
            <input
              type="number"
              name="beg_interval"
              id="beg_interval"
              class="block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-gray-900 shadow-sm focus:border-primary-500 focus:ring-primary-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 dark:focus:border-primary-500 dark:focus:ring-primary-500 sm:text-sm"
              x-model="formData.beg_interval"
              required />
          </div>
          <!-- END: Column 4 -->
        </div>
      </div>
      <!-- END: Card Body -->

      <!-- START: Card Footer -->
      <div class="mt-4 flex items-center justify-between border-t border-gray-200 pt-3 dark:border-gray-700 sm:pt-6">
        <div></div>
        <div class="flex-shrink-0">
          <button
            type="submit"
            :disabled="saving"
            :class="{'opacity-50': saving}"
            class="inline-flex items-center rounded-lg bg-primary-700 px-3 py-2 text-center text-sm font-medium text-white hover:bg-primary-800 focus:outline-none focus:ring-4 focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
            <span x-show="!saving"><%= tr('BTN_SAVE') %></span>
            <span x-show="saving"><%= tr('BTN_SAVING') %></span>
          </button>
        </div>
      </div>
      <!-- END: Card Footer -->
    </form>
  </div>
</section>
